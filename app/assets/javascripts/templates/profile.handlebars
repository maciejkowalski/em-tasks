<div>
    <h3>Edycja profilu</h3>

    <form class="form-horizontal" role="form">

        <div class="form-group">
            <label class="col-sm-2 control-label">Imię</label>

            <div class="col-sm-4">
                {{input type='text' value=model.first_name class='form-control' placeholder='Imię'}}
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Nazwisko</label>

            <div class="col-sm-4">
                {{input type='text' value=model.last_name class='form-control' placeholder='Nazwisko'}}
            </div>
        </div>

        <div class="form-group">
            <label for="email" class="col-sm-2 control-label">Email</label>

            <div class="col-sm-4">
                {{input type='text' value=model.email class='form-control' placeholder='Email'}}
            </div>
        </div>

        <div class="form-group">
            <label for="image_url" class="col-sm-2 control-label">Avatar URL</label>

            <div class="col-sm-4">
                {{input type='text' value=model.avatar class='form-control' placeholder='Adres URL obrazka'}}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default" {{action 'updateProfile'}}>Wyślij</button>
            </div>
        </div>
    </form>

    <br/>
    <hr/>

    <form class="form-horizontal" role="form">

        <div class="form-group">
            <label for="password" class="col-sm-2 control-label">Nowe hasło</label>

            <div class="col-sm-4">
                {{input type='password' value=model.password class='form-control' placeholder='Nowy hasło'}}
            </div>
        </div>

        <div class="form-group">
            <label for="password_confirmation" class="col-sm-2 control-label">Powtórz nowe hasło</label>

            <div class="col-sm-4">
                {{input type='password' value=model.password_confirmation class='form-control' placeholder='Powtórz Nowy hasło'}}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default" {{action 'updateProfile'}}>Wyślij</button>
            </div>
        </div>
    </form>

</div>