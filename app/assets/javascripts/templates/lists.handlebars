<div>
  <h1>em-tasks</h1>
  <br />

  <div class='col-md-6'>
    <form class='form-inline'>
      <div class='form-group'>
        {{input type='text' value=name id='list_name' class='form-control input-lg' placeholder='Add new List'}}
      </div>
      <button type='submit' class='btn btn-default btn-lg'>Create List</button>
    </form>
  </div>

  <br />
  <br />
  <hr />

  <div class="row">
    {{#each model as |list|}}
      <div class="col-md-4">
        {{x-list list=list}}

          <form class='form-inline padding7p'>
              <div class='form-group'>
                  {{input type='text' value=newTaskName class='form-control' placeholder='Nowy task'}}
              </div>
              <button type='submit' class='btn btn-default' {{action 'addTask'}}>Add Task</button>
          </form>

          {{#each task in list.tasks itemController='task'}}
              <div class="col-md-10">
                  <div class='col-md-10 padding7p font18p'>

                      {{#if task.isEditingTask}}
                          {{edit-input class="form-control" value=task.name focus-out="acceptChanges" insert-newline="acceptChanges"}}
                      {{else}}
                          <div {{action 'editTask' on='doubleClick'}}>
                              {{task.name}}
                          </div>
                      {{/if}}
                  </div>

                  <div class='col-md-2'>
                      <button class="btn btn-danger btn-xs pull-right" {{action 'destroyTask' task.id}} type="button">
                          <span class="glyphicon glyphicon-ban-circle"></span>
                      </button>
                  </div>

              </div>
          {{/each}}

      </div>
    {{/each}}
   </div>


</div>
